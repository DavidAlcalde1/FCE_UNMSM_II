<%- include('../partials/admin-header', { title: 'Comunicados' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">Comunicados</h1>
    <a href="/admin/comunicados/nuevo" class="btn btn-success">
      <i class="fas fa-plus me-2"></i>Nuevo Comunicado
    </a>
  </div>

  <% if (comunicados && comunicados.length > 0) { %>
    <div class="row g-3">
      <% comunicados.forEach(comunicado => { %>
        <div class="col-12">
          <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <h5 class="card-title text-primary mb-1"><%= comunicado.titulo %></h5>
                  <p class="text-muted small mb-0"><i class="far fa-calendar-alt me-1"></i><%= comunicado.fecha %></p>
                </div>
                <div class="btn-group btn-group-sm" role="group">
                  <a href="/admin/comunicados/<%= comunicado.id %>/editar" class="btn btn-outline-primary">
                    <i class="fas fa-edit me-1"></i>Editar
                  </a>
                  <form action="/admin/comunicados/<%= comunicado.id %>/eliminar" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger"
                            onclick="return confirm('Â¿Eliminar este comunicado?')">
                      <i class="fas fa-trash-alt me-1"></i>Eliminar
                    </button>
                  </form>
                </div>
              </div>

              <p class="card-text flex-grow-1">
                <%= comunicado.contenido?.substring(0, 150) %><%= comunicado.contenido?.length > 150 ? '...' : '' %>
              </p>

              <% if (comunicado.archivo) { %>
                <div class="mt-auto">
                  <a href="<%= comunicado.archivo %>" target="_blank" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-file-pdf me-1"></i>Ver Documento
                  </a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info d-flex align-items-center">
      <i class="fas fa-info-circle me-2"></i>
      <span>No hay comunicados registrados.</span>
    </div>
  <% } %>

  <div class="mt-4">
    <a href="/admin" class="btn btn-secondary">
      <i class="fas fa-arrow-left me-2"></i>Volver al Panel Principal
    </a>
  </div>
</main>

<%- include('../partials/admin-footer') %>