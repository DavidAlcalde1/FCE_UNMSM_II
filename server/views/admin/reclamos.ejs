<%- include('../partials/admin-header', { title: 'Libro de Reclamaciones' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-book me-2"></i>Libro de Reclamaciones</h2>
    <div>
      <a href="/admin/reclamos/exportar/csv" class="btn btn-success">
        <i class="fas fa-download me-2"></i>Exportar CSV
      </a>
    </div>
  </div>

  <!-- Estadísticas -->
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="card stat-card bg-primary text-white h-100">
        <div class="card-body text-center">
          <i class="fas fa-file-alt fa-2x mb-2"></i>
          <h4><%= (estadisticas && estadisticas.total) || 0 %></h4>
          <small>Total Reclamos</small>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card stat-card bg-warning text-white h-100">
        <div class="card-body text-center">
          <i class="fas fa-clock fa-2x mb-2"></i>
          <h4><%= (estadisticas && estadisticas.pendientes) || 0 %></h4>
          <small>Pendientes</small>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card stat-card bg-info text-white h-100">
        <div class="card-body text-center">
          <i class="fas fa-spinner fa-2x mb-2"></i>
          <h4><%= (estadisticas && estadisticas.enProceso) || 0 %></h4>
          <small>En Proceso</small>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card stat-card bg-success text-white h-100">
        <div class="card-body text-center">
          <i class="fas fa-check-circle fa-2x mb-2"></i>
          <h4><%= (estadisticas && estadisticas.resueltos) || 0 %></h4>
          <small>Resueltos</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Filtros -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="GET" action="/admin/reclamos" class="row g-3">
        <div class="col-md-3">
          <label class="form-label">Estado</label>
          <select name="estado" class="form-select">
            <option value="Todos" <%= filtros.estado === 'Todos' ? 'selected' : '' %>>Todos</option>
            <option value="Pendiente" <%= filtros.estado === 'Pendiente' ? 'selected' : '' %>>Pendiente</option>
            <option value="En Proceso" <%= filtros.estado === 'En Proceso' ? 'selected' : '' %>>En Proceso</option>
            <option value="Resuelto" <%= filtros.estado === 'Resuelto' ? 'selected' : '' %>>Resuelto</option>
            <option value="Cerrado" <%= filtros.estado === 'Cerrado' ? 'selected' : '' %>>Cerrado</option>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label">Tipo</label>
          <select name="tipo" class="form-select">
            <option value="Todos" <%= filtros.tipo === 'Todos' ? 'selected' : '' %>>Todos</option>
            <option value="Queja" <%= filtros.tipo === 'Queja' ? 'selected' : '' %>>Queja</option>
            <option value="Reclamo" <%= filtros.tipo === 'Reclamo' ? 'selected' : '' %>>Reclamo</option>
            <option value="Sugerencia" <%= filtros.tipo === 'Sugerencia' ? 'selected' : '' %>>Sugerencia</option>
            <option value="Felicitación" <%= filtros.tipo === 'Felicitación' ? 'selected' : '' %>>Felicitación</option>
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label">Buscar</label>
          <input type="text" name="busqueda" class="form-control" 
                 placeholder="Nombre, email o descripción..." 
                 value="<%= filtros.busqueda || '' %>">
        </div>
        <div class="col-md-2">
          <label class="form-label">&nbsp;</label>
          <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-search"></i> Filtrar
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Tabla de reclamos -->
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">Lista de Reclamos</h5>
    </div>
    <div class="card-body">
      <% if (reclamos && reclamos.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% reclamos.forEach(function(reclamo) { %>
                <tr>
                  <td>#<%= reclamo.id %></td>
                  <td><%= reclamo.nombre %></td>
                  <td><%= reclamo.email %></td>
                  <td>
                    <span class="badge bg-secondary"><%= reclamo.tipo %></span>
                  </td>
                  <td>
                    <% if (reclamo.estado === 'Pendiente') { %>
                      <span class="badge bg-warning">Pendiente</span>
                    <% } else if (reclamo.estado === 'En Proceso') { %>
                      <span class="badge bg-info">En Proceso</span>
                    <% } else if (reclamo.estado === 'Resuelto') { %>
                      <span class="badge bg-success">Resuelto</span>
                    <% } else if (reclamo.estado === 'Cerrado') { %>
                      <span class="badge bg-dark">Cerrado</span>
                    <% } %>
                  </td>
                  <td>
                    <small><%= new Date(reclamo.fecha_creacion).toLocaleDateString('es-ES') %></small>
                  </td>
                  <td>
                    <a href="/admin/reclamos/<%= reclamo.id %>" class="btn btn-sm btn-outline-primary">
                      <i class="fas fa-eye"></i> Ver
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- Paginación -->
        <% if (pagination && pagination.totalPages > 1) { %>
          <nav class="mt-4">
            <ul class="pagination justify-content-center">
              <% if (pagination.currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="?estado=<%= filtros.estado %>&tipo=<%= filtros.tipo %>&busqueda=<%= filtros.busqueda %>&pagina=<%= pagination.currentPage - 1 %>">Anterior</a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link">Anterior</span>
                </li>
              <% } %>

              <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                  <a class="page-link" href="?estado=<%= filtros.estado %>&tipo=<%= filtros.tipo %>&busqueda=<%= filtros.busqueda %>&pagina=<%= i %>"><%= i %></a>
                </li>
              <% } %>

              <% if (pagination.currentPage < pagination.totalPages) { %>
                <li class="page-item">
                  <a class="page-link" href="?estado=<%= filtros.estado %>&tipo=<%= filtros.tipo %>&busqueda=<%= filtros.busqueda %>&pagina=<%= pagination.currentPage + 1 %>">Siguiente</a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link">Siguiente</span>
                </li>
              <% } %>
            </ul>
          </nav>
        <% } %>

      <% } else { %>
        <div class="text-center py-4">
          <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
          <h5 class="text-muted">No se encontraron reclamos</h5>
          <p class="text-muted">No hay reclamos que coincidan con los filtros seleccionados.</p>
        </div>
      <% } %>
    </div>
  </div>
</main>

<%- include('../partials/admin-footer') %>