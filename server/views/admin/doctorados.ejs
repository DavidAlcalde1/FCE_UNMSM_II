<%- include('../partials/admin-header', { title: 'Doctorados' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
      <i class="fas fa-graduation-cap me-2"></i>Doctorados
    </h1>
    <a href="/admin/doctorados/nuevo" class="btn btn-success">
      <i class="fas fa-plus me-2"></i>Nuevo Doctorado
    </a>
  </div>

  <% if (doctorados && doctorados.length > 0) { %>
    <div class="row g-3">
      <% doctorados.forEach(doctorado => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm h-100">
            <% if (doctorado.imagen) { %>
              <img src="/<%= doctorado.imagen %>" class="card-img-top" alt="<%= doctorado.nombre %>" style="height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary mb-2"><%= doctorado.nombre %></h5>
              <div class="mt-auto d-flex gap-2">
                <a href="/admin/doctorados/<%= doctorado.id %>/editar" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-edit me-1"></i>Editar
                </a>
                <form action="/admin/doctorados/<%= doctorado.id %>/eliminar" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger"
                          onclick="return confirm('Â¿Eliminar este doctorado?')">
                    <i class="fas fa-trash-alt me-1"></i>Eliminar
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info d-flex align-items-center">
      <i class="fas fa-info-circle me-2"></i>
      <span>No hay doctorados registrados.</span>
    </div>
  <% } %>

  <div class="mt-4">
    <a href="/admin" class="btn btn-secondary">
      <i class="fas fa-arrow-left me-2"></i>Volver al Panel Principal
    </a>
  </div>
</main>

<%- include('../partials/admin-footer') %>