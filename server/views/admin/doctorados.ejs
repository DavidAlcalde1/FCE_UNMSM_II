<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Doctorados - Admin FCE</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .container { max-width: 1200px; }
    .card { margin-bottom: 1rem; }
    .btn-action { margin-right: 0.5rem; }
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Doctorados</h1>
      <a href="/admin/doctorados/nuevo" class="btn btn-success">+ Nuevo Doctorado</a>
    </div>
    
    <div class="row">
      <% if (doctorados && doctorados.length > 0) { %>
        <% doctorados.forEach(doctorado => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card">
              <% if (doctorado.imagen) { %>
                <img src="/<%= doctorado.imagen %>" class="card-img-top" alt="<%= doctorado.nombre %>" style="height: 200px; object-fit: cover;">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= doctorado.nombre %></h5>
                <div class="d-flex">
                  <a href="/admin/doctorados/<%= doctorado.id %>/editar" class="btn btn-primary btn-sm btn-action">Editar</a>
                  <form action="/admin/doctorados/<%= doctorado.id %>/eliminar" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm" 
                            onclick="return confirm('¿Eliminar este doctorado?')">Eliminar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info">No hay doctorados registrados.</div>
        </div>
      <% } %>
    </div>
    
    <div class="mt-3">
      <a href="/admin" class="btn btn-secondary">← Volver al Panel Principal</a>
    </div>
  </div>
</body>
</html>