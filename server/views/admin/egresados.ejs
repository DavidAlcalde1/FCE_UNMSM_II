<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Egresados - Admin FCE</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .container { max-width: 1200px; }
    .card { margin-bottom: 1rem; }
    .btn-action { margin-right: 0.5rem; }
    .egresado-img { width: 80px; height: 80px; object-fit: cover; border-radius: 50%; }
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Egresados Destacados</h1>
      <a href="/admin/egresados/nuevo" class="btn btn-success">+ Nuevo Egresado</a>
    </div>
    
    <div class="row">
      <% if (egresados && egresados.length > 0) { %>
        <% egresados.forEach(egresado => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card">
              <div class="card-body d-flex align-items-center">
                <% if (egresado.imagen) { %>
                  <img src="/<%= egresado.imagen %>" class="egresado-img me-3" alt="<%= egresado.nombre %>">
                <% } else { %>
                  <div class="egresado-img bg-secondary me-3 d-flex align-items-center justify-content-center text-white">
                    <i class="fas fa-user"></i>
                  </div>
                <% } %>
                <div class="flex-grow-1">
                  <h6 class="card-title mb-1"><%= egresado.nombre %></h6>
                  <small class="text-muted"><%= egresado.titulo %></small>
                  <p class="mb-0"><%= egresado.empresa %></p>
                </div>
                <div>
                  <a href="/admin/egresados/<%= egresado.id %>/editar" class="btn btn-primary btn-sm btn-action">Editar</a>
                  <form action="/admin/egresados/<%= egresado.id %>/eliminar" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm" 
                            onclick="return confirm('¿Eliminar este egresado?')">Eliminar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info">No hay egresados registrados.</div>
        </div>
      <% } %>
    </div>
    
    <div class="mt-3">
      <a href="/admin" class="btn btn-secondary">← Volver al Panel Principal</a>
    </div>
  </div>
</body>
</html>