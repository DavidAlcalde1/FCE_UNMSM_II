<%- include('../partials/admin-header', { title: doctorado ? 'Editar Doctorado' : 'Nuevo Doctorado' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex align-items-center mb-4">
    <a href="/admin/doctorados" class="btn btn-outline-secondary btn-sm me-3">
      <i class="fas fa-arrow-left"></i>
    </a>
    <h1 class="h2 mb-0"><%= doctorado ? 'Editar Doctorado' : 'Nuevo Doctorado' %></h1>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form method="POST" action="<%= doctorado ? `/admin/doctorados/${doctorado.id}` : '/admin/doctorados' %>" enctype="multipart/form-data">
        
        <!-- Nombre -->
        <div class="mb-3">
          <label for="nombre" class="form-label fw-semibold">Nombre del Doctorado *</label>
          <input type="text" class="form-control" id="nombre" name="nombre" value="<%= doctorado?.nombre || '' %>" required>
        </div>

        <!-- Imagen -->
        <div class="mb-3">
          <label for="imagen" class="form-label fw-semibold">Imagen</label>
          <% if (doctorado && doctorado.imagen) { %>
            <div class="mb-2">
              <img src="/<%= doctorado.imagen %>" alt="Vista previa" class="img-thumbnail" style="max-height: 150px;">
            </div>
          <% } %>
          <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
          <% if (doctorado && doctorado.imagen) { %>
            <div class="form-text">Deja vac√≠o para mantener la imagen actual</div>
          <% } %>
        </div>

        <!-- Enlace -->
        <div class="mb-3">
          <label for="enlace" class="form-label fw-semibold">Enlace (URL)</label>
          <input type="url" class="form-control" id="enlace" name="enlace" placeholder="https://ejemplo.com/doctorado" value="<%= doctorado?.enlace || '' %>">
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-end gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i><%= doctorado ? 'Actualizar' : 'Crear' %>
          </button>
        </div>
      </form>
    </div>
  </div>
</main>



<%- include('../partials/admin-footer') %>