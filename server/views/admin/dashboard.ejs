<%- include('../partials/admin-header', { title: 'Dashboard' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
    <h1 class="mb-4">Panel de Administración</h1>
    <p class="text-muted mb-4">Bienvenido al panel de gestión de contenido</p>

    <div class="row g-3">
        <!-- Tarjeta Noticias -->
        <div class="col-md-3">
            <a href="/admin/noticias" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-primary text-white h-100">
                    <h3 class="mb-2"><%= stats.noticias %></h3>
                    <h5 class="mb-0">Noticias</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Eventos -->
        <div class="col-md-3">
            <a href="/admin/eventos" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-success text-white h-100">
                    <h3 class="mb-2"><%= stats.eventos %></h3>
                    <h5 class="mb-0">Eventos</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Comunicados -->
        <div class="col-md-3">
            <a href="/admin/comunicados" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-info text-white h-100">
                    <h3 class="mb-2"><%= stats.comunicados %></h3>
                    <h5 class="mb-0">Comunicados</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Egresados -->
        <div class="col-md-3">
            <a href="/admin/egresados" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-warning text-dark h-100">
                    <h3 class="mb-2"><%= stats.egresados %></h3>
                    <h5 class="mb-0">Egresados</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Maestrías -->
        <div class="col-md-3">
            <a href="/admin/maestrias" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-secondary text-white h-100">
                    <h3 class="mb-2"><%= stats.maestrias %></h3>
                    <h5 class="mb-0">Maestrías</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Doctorados -->
        <div class="col-md-3">
            <a href="/admin/doctorados" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-dark text-white h-100">
                    <h3 class="mb-2"><%= stats.doctorados %></h3>
                    <h5 class="mb-0">Doctorados</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Contactos General -->
        <div class="col-md-3">
            <a href="/admin/contactos" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-danger text-white h-100">
                    <h3 class="mb-2"><%= stats.contactos || 0 %></h3>
                    <h5 class="mb-0">Contactos FCE</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Contactos Posgrado -->
        <div class="col-md-3">
            <a href="/admin/contactos-posgrado" class="text-decoration-none">
                <div class="card stat-card text-center p-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <h3 class="mb-2"><%= stats.contactosPosgrado || 0 %></h3>
                    <h5 class="mb-0">Contactos Posgrado</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Contactos CERSEU (verde) -->
        <div class="col-md-3">
            <a href="/admin/contactos-cerseu" class="text-decoration-none">
                <div class="card stat-card text-center p-3" style="background: linear-gradient(135deg, #1a5f2a 0%, #2d8f3e 100%); color: white;">
                    <h3 class="mb-2"><%= stats.contactosCerseu || 0 %></h3>
                    <h5 class="mb-0">Contactos CERSEU</h5>
                </div>
            </a>
        </div>

        <!-- Tarjeta Contactos CESEPI (azul) -->
        <div class="col-md-3">
            <a href="/admin/contactos-cesepi" class="text-decoration-none">
                <div class="card stat-card text-center p-3" style="background: linear-gradient(135deg, #0d47a1 0%, #1976d2 100%); color: white;">
                    <h3 class="mb-2"><%= stats.contactosCesepi || 0 %></h3>
                    <h5 class="mb-0">Contactos CESEPI</h5>
                </div>
            </a>
        </div>


        <!-- Tarjeta Reclamaciones -->
        <div class="col-md-3">
            <a href="/admin/reclamos" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-primary text-white h-100">
                    <h3 class="mb-2"><%= stats.reclamos || 0 %></h3>
                    <h5 class="mb-0">Reclamos</h5>
                </div>
            </a>
        </div>
    </div>
</main>

<%- include('../partials/admin-footer') %>
