<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Dashboard - Admin FCE</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .stat-card { 
      cursor: pointer; 
      transition: transform 0.2s; 
      margin-bottom: 2rem;
      min-height: 90px;
    }
    .stat-card:hover { 
      transform: translateY(-5px); 
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">
        <i class="fas fa-university me-2"></i>FCE Admin Panel
      </a>
      <div class="navbar-nav ms-auto">
        <span class="navbar-text me-3">
          <i class="fas fa-user me-1"></i>Administrador
        </span>
        <a class="nav-link" href="/admin/logout">
          <i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión
        </a>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 px-0">
        <div class="bg-light" style="min-height: calc(100vh - 56px);">
          <div class="p-3">
            <h6 class="text-muted mb-3">MENÚ PRINCIPAL</h6>
            <nav class="nav flex-column">
              <a class="nav-link active bg-primary text-white" href="/admin">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
              </a>
              <a class="nav-link" href="/admin/noticias">
                <i class="fas fa-newspaper me-2"></i>Noticias
              </a>
              <a class="nav-link" href="/admin/eventos">
                <i class="fas fa-calendar me-2"></i>Eventos
              </a>
              <a class="nav-link" href="/admin/comunicados">
                <i class="fas fa-bullhorn me-2"></i>Comunicados
              </a>
              <a class="nav-link" href="/admin/egresados">
                <i class="fas fa-graduation-cap me-2"></i>Egresados
              </a>
              <a class="nav-link" href="/admin/maestrias">
                <i class="fas fa-graduation-cap me-2"></i>Maestrías
              </a>
              <a class="nav-link" href="/admin/doctorados">
                <i class="fas fa-graduation-cap me-2"></i>Doctorados
              </a>
              <a class="nav-link" href="/admin/contactos">
                <i class="fas fa-envelope me-2"></i>Contactos
              </a>
              <a class="nav-link" href="/admin/reclamos">
                <i class="fas fa-book me-2"></i>Libro Reclamaciones
              </a>
            </nav>
          </div>
        </div>
      </div>

      <!-- Main content -->
      <div class="col-md-9 col-lg-10">
        <div class="p-4">
          <h1>Panel de Administración</h1>
          <p class="text-muted">Bienvenido al panel de gestión de contenido</p>

          <div class="row">
            <div class="col-md-3">
              <a href="/admin/noticias" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-primary text-white">
                  <h3><%= stats.noticias %></h3>
                  <h5>Noticias</h5>
                </div>
              </a>
            </div>
            <div class="col-md-3">
              <a href="/admin/eventos" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-success text-white">
                  <h3><%= stats.eventos %></h3>
                  <h5>Eventos</h5>
                </div>
              </a>
            </div>
            <div class="col-md-3">
              <a href="/admin/comunicados" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-info text-white">
                  <h3><%= stats.comunicados %></h3>
                  <h5>Comunicados</h5>
                </div>
              </a>
            </div>
            <div class="col-md-3">
              <a href="/admin/egresados" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-warning text-dark">
                  <h3><%= stats.egresados %></h3>
                  <h5>Egresados</h5>
                </div>
              </a>
            </div>
            <div class="col-md-3">
              <a href="/admin/maestrias" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-secondary text-white">
                  <h3><%= stats.maestrias %></h3>
                  <h5>Maestrías</h5>
                </div>
              </a>
            </div>
            <div class="col-md-3">
              <a href="/admin/doctorados" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-dark text-white">
                  <h3><%= stats.doctorados %></h3>
                  <h5>Doctorados</h5>
                </div>
              </a>
            </div>
            <div class="col-md-3">
              <a href="/admin/contactos" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-danger text-white">
                  <h3><%= stats.contactos || 0 %></h3>
                  <h5>Contactos</h5>
                </div>
              </a>
            </div>
            <div class="col-md-3">
              <a href="/admin/reclamos" class="text-decoration-none">
                <div class="card stat-card text-center p-3 bg-primary text-white">
                  <h3><%= stats.reclamos || 0 %></h3>
                  <h5>Reclamos</h5>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>