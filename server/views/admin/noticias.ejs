<%- include('../partials/admin-header', { title: 'Noticias' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
      <i class="fas fa-newspaper me-2"></i>Noticias
    </h1>
    <a href="/admin/noticias/nueva" class="btn btn-success">
      <i class="fas fa-plus me-2"></i>Nueva Noticia
    </a>
  </div>

  <% if (noticias && noticias.length > 0) { %>
    <div class="row g-3">
      <% noticias.forEach(noticia => { %>
        <div class="col-12">
          <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">
              <div class="flex-grow-1 mb-3 mb-md-0">
                <h5 class="card-title text-primary mb-1"><%= noticia.titulo %></h5>
                <% if (noticia.imagen) { %>
                  <div class="mb-2">
                    <img src="/<%= noticia.imagen %>" alt="<%= noticia.titulo %>" class="img-fluid rounded" style="max-height: 150px; object-fit: cover;">
                  </div>
                <% } %>
                <p class="text-muted small mb-2">
                  <i class="far fa-calendar me-1"></i> <%= noticia.fecha %>
                  <% if (noticia.fecha_vencimiento) { %>
                    &nbsp;|&nbsp; <i class="far fa-clock me-1"></i> Vence: <%= noticia.fecha_vencimiento %>
                  <% } %>
                </p>
                <p class="card-text">
                  <%= noticia.resumen && noticia.resumen.length > 150 
                    ? noticia.resumen.substring(0, 150) + '…' 
                    : noticia.resumen || '' %>
                </p>
              </div>
              <div class="d-flex flex-column gap-2 flex-shrink-0">
                <a href="/admin/noticias/<%= noticia.id %>/editar" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-edit me-1"></i>Editar
                </a>
                <form action="/admin/noticias/<%= noticia.id %>/eliminar" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger" 
                          onclick="return confirm('¿Eliminar esta noticia?')">
                    <i class="fas fa-trash-alt me-1"></i>Eliminar
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info d-flex align-items-center">
      <i class="fas fa-info-circle me-2"></i>
      <span>No hay noticias registradas.</span>
    </div>
  <% } %>

  <div class="mt-4">
    <a href="/admin" class="btn btn-secondary">
      <i class="fas fa-arrow-left me-2"></i>Volver al Panel Principal
    </a>
  </div>
</main>

<%- include('../partials/admin-footer') %>