<%- include('../partials/admin-header', { title: egresado ? 'Editar Egresado' : 'Nuevo Egresado' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex align-items-center mb-4">
    <a href="/admin/egresados" class="btn btn-outline-secondary btn-sm me-3">
      <i class="fas fa-arrow-left"></i>
    </a>
    <h1 class="h2 mb-0"><%= egresado ? 'Editar Egresado' : 'Nuevo Egresado' %></h1>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form method="POST" action="<%= egresado ? `/admin/egresados/${egresado.id}` : '/admin/egresados' %>" enctype="multipart/form-data">
        
        <!-- Nombre -->
        <div class="mb-3">
          <label for="nombre" class="form-label fw-semibold">Nombre Completo *</label>
          <input type="text" class="form-control" id="nombre" name="nombre" value="<%= egresado?.nombre || '' %>" required>
        </div>

        <!-- Título -->
        <div class="mb-3">
          <label for="titulo" class="form-label fw-semibold">Título Profesional</label>
          <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Ej: Economista, Magíster en Finanzas" value="<%= egresado?.titulo || '' %>">
        </div>

        <!-- Empresa -->
        <div class="mb-3">
          <label for="empresa" class="form-label fw-semibold">Empresa / Institución</label>
          <input type="text" class="form-control" id="empresa" name="empresa" placeholder="Dónde trabaja actualmente" value="<%= egresado?.empresa || '' %>">
        </div>

        <!-- Testimonio -->
        <div class="mb-3">
          <label for="testimonio" class="form-label fw-semibold">Testimonio</label>
          <textarea class="form-control" id="testimonio" name="testimonio" rows="4" placeholder="Testimonio del egresado sobre su experiencia"><%= egresado?.testimonio || '' %></textarea>
        </div>

        <!-- Imagen -->
        <div class="mb-3">
          <label for="imagen" class="form-label fw-semibold">Imagen</label>
          <% if (egresado && egresado.imagen) { %>
            <div class="mb-2">
              <img src="/<%= egresado.imagen %>" alt="Vista previa" class="img-thumbnail" style="max-height: 150px;">
            </div>
          <% } %>
          <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
          <% if (egresado && egresado.imagen) { %>
            <div class="form-text">Deja vacío para mantener la imagen actual</div>
          <% } %>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-end gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i><%= egresado ? 'Actualizar' : 'Crear' %>
          </button>
        </div>
      </form>
    </div>
  </div>
</main>



<%- include('../partials/admin-footer') %>