<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Eventos - Admin FCE</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .container { max-width: 1200px; }
    .card { margin-bottom: 1rem; min-height: 500px; }
    .card-title { min-height: 90px;}
    .card-text {min-height: 70px;}
    .btn-action { margin-right: 0.5rem; }
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Eventos</h1>
      <a href="/admin/eventos/nuevo" class="btn btn-success">+ Nuevo Evento</a>
    </div>
    
    <div class="row">
      <% if (eventos && eventos.length > 0) { %>
        <% eventos.forEach(evento => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card">
              <% if (evento.imagen) { %>
                <img src="/<%= evento.imagen %>" class="card-img-top" alt="<%= evento.titulo %>" style="height: 200px; object-fit: cover;">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= evento.titulo %></h5>
                <p class="card-text-text-muted"><%= evento.fecha %></p>
                <p class="card-text"><%= evento.descripcion?.substring(0, 100) %><%= evento.descripcion?.length > 100 ? '...' : '' %></p>
                <div class="d-flex">
                  <a href="/admin/eventos/<%= evento.id %>/editar" class="btn btn-primary btn-sm btn-action">Editar</a>
                  <form action="/admin/eventos/<%= evento.id %>/eliminar" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm" 
                            onclick="return confirm('¿Eliminar este evento?')">Eliminar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info">No hay eventos registrados.</div>
        </div>
      <% } %>
    </div>
    
    <div class="mt-3">
      <a href="/admin" class="btn btn-secondary">← Volver al Panel Principal</a>
    </div>
  </div>
</body>
</html>