<%- include('../partials/admin-header', { title: 'Eventos' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
      <i class="fas fa-calendar-alt me-2"></i>Eventos
    </h1>
    <a href="/admin/eventos/nuevo" class="btn btn-success">
      <i class="fas fa-plus me-2"></i>Nuevo Evento
    </a>
  </div>

  <% if (eventos && eventos.length > 0) { %>
    <div class="row g-3">
      <% eventos.forEach(evento => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm h-100">
            <% if (evento.imagen) { %>
              <img src="/<%= evento.imagen %>" class="card-img-top" alt="<%= evento.titulo %>" style="height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary mb-2"><%= evento.titulo %></h5>
              <p class="text-muted small mb-2">
                <i class="far fa-calendar-alt me-1"></i><%= evento.fecha %>
              </p>
              <p class="card-text flex-grow-1">
                <%= evento.descripcion?.substring(0, 100) %><%= evento.descripcion?.length > 100 ? '...' : '' %>
              </p>
              <div class="d-flex gap-2 mt-auto">
                <a href="/admin/eventos/<%= evento.id %>/editar" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-edit me-1"></i>Editar
                </a>
                <form action="/admin/eventos/<%= evento.id %>/eliminar" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Â¿Eliminar este evento?')">
                    <i class="fas fa-trash-alt me-1"></i>Eliminar
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info d-flex align-items-center">
      <i class="fas fa-info-circle me-2"></i>
      <span>No hay eventos registrados.</span>
    </div>
  <% } %>

  <div class="mt-4">
    <a href="/admin" class="btn btn-secondary">
      <i class="fas fa-arrow-left me-2"></i>Volver al Panel Principal
    </a>
  </div>
</main>

<%- include('../partials/admin-footer') %>