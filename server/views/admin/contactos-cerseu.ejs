<%- include('../partials/admin-header', { title: 'Contactos CERSEU' }) %>




<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">

  <div class="d-flex align-items-center justify-content-between mb-4">

    <h1 class="h2 mb-0">

      <i class="fas fa-hands-helping me-2"></i>Mensajes CERSEU

    </h1>

    <div class="d-flex gap-2">

      <a href="/admin/contactos-cerseu/exportar-excel" class="btn btn-success">

        <i class="fas fa-file-excel me-2"></i>Excel

      </a>

      <a href="/admin/contactos-cerseu/exportar-pdf" class="btn btn-danger">

        <i class="fas fa-file-pdf me-2"></i>PDF

      </a>

    </div>

  </div>




  <!-- Filtro por fecha -->

  <div class="card mb-4">

    <div class="card-body">

      <form method="GET" action="/admin/contactos-cerseu" class="row g-3 align-items-end">

        <div class="col-md-3">

          <label class="form-label">Fecha desde</label>

          <input type="date" name="fechaInicio" class="form-control" value="<%= fechaInicio || '' %>">

        </div>

        <div class="col-md-3">

          <label class="form-label">Fecha hasta</label>

          <input type="date" name="fechaFin" class="form-control" value="<%= fechaFin || '' %>">

        </div>

        <div class="col-md-2">

          <button type="submit" class="btn btn-primary w-100">

            <i class="fas fa-search me-1"></i>Filtrar

          </button>

        </div>

        <div class="col-md-2">

          <a href="/admin/contactos-cerseu" class="btn btn-outline-secondary w-100">

            <i class="fas fa-times me-1"></i>Limpiar

          </a>

        </div>

      </form>

    </div>

  </div>




  <% if (mensajes && mensajes.length > 0) { %>

    <div class="table-responsive">

      <table class="table table-hover">

        <thead class="table-light">

          <tr>

            <th>ID</th>

            <th>Fecha</th>

            <th>Nombre</th>

            <th>Email</th>

            <th>Tel√©fono</th>

            <th>Mensaje</th>

            <th>Acciones</th>

          </tr>

        </thead>

        <tbody>

          <% mensajes.forEach(function(mensaje) { %>

            <tr>

              <td><%= mensaje.id %></td>

              <td><%= new Date(mensaje.createdAt).toLocaleDateString('es-PE') %></td>

              <td><%= mensaje.nombre %></td>

              <td><%= mensaje.email %></td>

              <td><%= mensaje.telefono || '-' %></td>

              <td>

                <button class="btn btn-info btn-sm" data-mensaje="<%= encodeURIComponent(mensaje.mensaje) %>" onclick="verMensaje(this)">

                  <i class="fas fa-eye me-1"></i>Ver

                </button>

              </td>

              <td>

                <button class="btn btn-danger btn-sm" data-id="<%= mensaje.id %>" onclick="eliminarMensaje(this)">

                  <i class="fas fa-trash me-1"></i>

                </button>

              </td>

            </tr>

          <% }); %>

        </tbody>

      </table>

    </div>

  <% } else { %>

    <div class="alert alert-info d-flex align-items-center">

      <i class="fas fa-info-circle me-2"></i>

      <span>No hay mensajes de CERSEU en el rango de fechas seleccionado.</span>

    </div>

  <% } %>

</main>




<!-- Modal para ver mensaje -->

<div id="mensajeModal" class="modal" style="display: none;">

  <div class="modal-dialog modal-dialog-centered">

    <div class="modal-content">

      <div class="modal-header">

        <h5 class="modal-title">Contenido del Mensaje</h5>

        <button type="button" class="btn-close" onclick="closeMensajeModal()"></button>

      </div>

      <div class="modal-body">

        <div id="mensajeContenido" style="white-space: pre-wrap;"></div>

      </div>

      <div class="modal-footer">

        <button type="button" class="btn btn-secondary" onclick="closeMensajeModal()">Cerrar</button>

      </div>

    </div>

  </div>

</div>




<%- include('../partials/admin-contactos-styles') %>

<%- include('../partials/admin-contactos-scripts') %>

<%- include('../partials/admin-footer') %>