<%- include('../partials/admin-header', { title: 'Mensajes de Contacto' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h2 mb-0">
      <i class="fas fa-envelope me-2"></i>Mensajes de Contacto
    </h1>
    <a href="/admin/contactos/exportar-pdf" class="btn btn-success">
      <i class="fas fa-file-pdf me-2"></i>Exportar a PDF
    </a>
  </div>

  <% if (contactos && contactos.length > 0) { %>
    <div class="row g-3">
      <% contactos.forEach(c => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title text-primary mb-0"><%= c.nombre %></h5>
                <span class="badge bg-secondary"><%= c.oficina %></span>
              </div>

              <h6 class="card-subtitle mb-2 text-muted">
                <i class="fas fa-envelope me-1"></i><%= c.email %><br>
                <% if (c.telefono) { %>
                  <i class="fas fa-phone me-1"></i><%= c.telefono %>
                <% } else { %>
                  <i class="fas fa-phone text-muted me-1"></i>Sin tel√©fono
                <% } %>
              </h6>

              <p class="card-text flex-grow-1"><%= c.mensaje %></p>

              <small class="text-muted mt-auto">
                <i class="far fa-clock me-1"></i>
                <%= new Date(c.createdAt).toLocaleString('es-PE') %>
              </small>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info d-flex align-items-center">
      <i class="fas fa-info-circle me-2"></i>
      <span>No hay mensajes de contacto registrados.</span>
    </div>
  <% } %>
</main>

<%- include('../partials/admin-footer') %>