<%- include('../partials/admin-header', { title: comunicado ? 'Editar Comunicado' : 'Nuevo Comunicado' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex align-items-center mb-4">
    <a href="/admin/comunicados" class="btn btn-outline-secondary btn-sm me-3">
      <i class="fas fa-arrow-left"></i>
    </a>
    <h1 class="h2 mb-0"><%= comunicado ? 'Editar Comunicado' : 'Nuevo Comunicado' %></h1>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form method="POST" action="<%= comunicado ? `/admin/comunicados/${comunicado.id}` : '/admin/comunicados' %>" enctype="multipart/form-data">
        
        <!-- Título -->
        <div class="mb-3">
          <label for="titulo" class="form-label fw-semibold">Título *</label>
          <input type="text" class="form-control" id="titulo" name="titulo" value="<%= comunicado?.titulo || '' %>" required>
        </div>

        <!-- Contenido -->
        <div class="mb-3">
          <label for="contenido" class="form-label fw-semibold">Contenido</label>
          <textarea class="form-control" id="contenido" name="contenido" rows="6"><%= comunicado?.contenido || '' %></textarea>
        </div>

        <!-- Fecha -->
        <div class="mb-3">
          <label for="fecha" class="form-label fw-semibold">Fecha *</label>
          <input type="date" class="form-control" id="fecha" name="fecha" value="<%= comunicado?.fecha || '' %>" required>
        </div>

        <!-- Imagen -->
        <div class="mb-3">
          <label for="imagen" class="form-label fw-semibold">Imagen (opcional)</label>
          <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
          <% if (comunicado?.imagen) { %>
            <div class="mt-2">
              <img src="/<%= comunicado.imagen %>" alt="Vista previa" class="img-thumbnail" style="max-height: 120px;">
            </div>
          <% } %>
        </div>

        <!-- Archivo adjunto -->
        <div class="mb-3">
          <label for="archivo" class="form-label fw-semibold">Archivo adjunto (PDF, DOC, etc.)</label>
          <input type="file" class="form-control" id="archivo" name="archivo" accept=".pdf,.doc,.docx,.txt">
          <% if (comunicado?.archivo) { %>
            <div class="mt-2">
              <a href="/<%= comunicado.archivo %>" target="_blank" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-file-pdf me-1"></i>Ver archivo actual
              </a>
            </div>
          <% } %>
          <div class="form-text">Formatos permitidos: PDF, DOC, DOCX, TXT (máx. 10 MB)</div>
        </div>

        <!-- Fecha de vencimiento -->
        <div class="mb-3">
          <label for="fecha_vencimiento" class="form-label fw-semibold">Fecha de vencimiento (opcional)</label>
          <input type="date" class="form-control" id="fecha_vencimiento" name="fecha_vencimiento" value="<%= comunicado?.fecha_vencimiento || '' %>">
          <div class="form-text">Si se deja vacío, el contenido nunca caduca.</div>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-end gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i><%= comunicado ? 'Actualizar' : 'Crear' %>
          </button>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('../partials/admin-footer') %>