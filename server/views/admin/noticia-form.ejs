<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <title><%= noticia ? 'Editar' : 'Nueva' %> Noticia</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2><%= noticia ? 'Editar' : 'Nueva' %> Noticia</h2>
    <form action="<%= noticia ? '/admin/noticias/' + noticia.id : '/admin/noticias' %>" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label>Título</label>
        <input type="text" name="titulo" class="form-control" value="<%= noticia ? noticia.titulo : '' %>" required>
      </div>
      <div class="mb-3">
        <label>Resumen</label>
        <textarea name="resumen" class="form-control" required><%= noticia ? noticia.resumen : '' %></textarea>
      </div>
      <div class="mb-3">
        <label>Contenido</label>
        <textarea name="contenido" class="form-control" rows="5" required><%= noticia ? noticia.contenido : '' %></textarea>
      </div>
      <div class="mb-3">
        <label>Fecha (YYYY-MM-DD)</label>
        <input type="date" name="fecha" class="form-control" value="<%= noticia ? noticia.fecha : '' %>" required>
      </div>
      <div class="mb-3">
        <label>Imagen</label>
        <% if (noticia && noticia.imagen) { %>
          <div class="mb-2">
            <img src="/<%= noticia.imagen %>" alt="Vista previa" style="max-height: 150px; max-width: 150px; object-fit: cover; border-radius: 4px;">
          </div>
        <% } %>
        <input type="file" name="imagen" class="form-control" accept="image/*">
        <% if (noticia && noticia.imagen) { %>
          <div class="form-text">Deja vacío para mantener la imagen actual</div>
        <% } %>
      </div>

      <div class="mb-3">
        <label for="fecha_vencimiento" class="form-label">Fecha de vencimiento (opcional)</label>
        <input type="date" name="fecha_vencimiento" value="<%= noticia?.fecha_vencimiento || '' %>">
        <div class="form-text">Si se deja vacío, el contenido nunca caduca.</div>
      </div>

      <button type="submit" class="btn btn-primary">Guardar</button>
      <a href="/admin/noticias" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</body>
</html>