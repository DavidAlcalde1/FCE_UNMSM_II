<%- include('../partials/admin-header', { title: noticia ? 'Editar Noticia' : 'Nueva Noticia' }) %>

<main class="col-md-9 col-lg-10 ms-auto px-4 py-3">
  <div class="d-flex align-items-center mb-4">
    <a href="/admin/noticias" class="btn btn-outline-secondary btn-sm me-3">
      <i class="fas fa-arrow-left"></i>
    </a>
    <h1 class="h2 mb-0"><%= noticia ? 'Editar Noticia' : 'Nueva Noticia' %></h1>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form action="<%= noticia ? '/admin/noticias/' + noticia.id : '/admin/noticias' %>" method="post" enctype="multipart/form-data">
        
        <!-- Título -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Título *</label>
          <input type="text" name="titulo" class="form-control" value="<%= noticia ? noticia.titulo : '' %>" required>
        </div>

        <!-- Resumen -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Resumen *</label>
          <textarea name="resumen" class="form-control" rows="3" required><%= noticia ? noticia.resumen : '' %></textarea>
        </div>

        <!-- Contenido -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Contenido *</label>
          <textarea name="contenido" class="form-control" rows="6" required><%= noticia ? noticia.contenido : '' %></textarea>
        </div>

        <!-- Fecha -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Fecha *</label>
          <input type="date" name="fecha" class="form-control" value="<%= noticia ? noticia.fecha : '' %>" required>
        </div>

        <!-- Imagen -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Imagen</label>
          <% if (noticia && noticia.imagen) { %>
            <div class="mb-2">
              <img src="/<%= noticia.imagen %>" alt="Vista previa" class="img-thumbnail" style="max-height: 150px;">
            </div>
          <% } %>
          <input type="file" name="imagen" class="form-control" accept="image/*">
          <% if (noticia && noticia.imagen) { %>
            <div class="form-text">Deja vacío para mantener la imagen actual</div>
          <% } %>
        </div>

        <!-- Fecha de vencimiento -->
        <div class="mb-3">
          <label class="form-label fw-semibold">Fecha de vencimiento (opcional)</label>
          <input type="date" name="fecha_vencimiento" class="form-control" value="<%= noticia?.fecha_vencimiento || '' %>">
          <div class="form-text">Si se deja vacío, el contenido nunca caduca.</div>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-end gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Guardar
          </button>
          <a href="/admin/noticias" class="btn btn-secondary">
            <i class="fas fa-times me-2"></i>Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>
</main>



<%- include('../partials/admin-footer') %>